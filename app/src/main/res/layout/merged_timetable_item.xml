<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    app:cardElevation="@dimen/card_elevation"
    app:strokeWidth="0dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardBackgroundColor="?attr/colorSurface"
    android:clipToPadding="false"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <!-- Moderne Periode-Indikator -->
        <View
            android:id="@+id/view_period_indicator"
            android:layout_width="@dimen/period_indicator_width"
            android:layout_height="match_parent"
            android:background="@drawable/period_indicator_double"
            android:visibility="gone" />

        <!-- Optimierte Zeit-Sektion -->
        <LinearLayout
            android:layout_width="@dimen/time_section_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_left_background_modern"
            android:paddingHorizontal="@dimen/time_section_padding"
            android:paddingVertical="@dimen/card_padding"
            android:elevation="2dp">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.02"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_size_time_large"
                tools:text="08:00" />

            <!-- Moderne Divider-Linie -->
            <View
                android:layout_width="28dp"
                android:layout_height="2dp"
                android:background="?attr/colorOnPrimary"
                android:alpha="0.8"
                android:layout_marginVertical="6dp" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.95"
                android:fontFamily="@font/inter_medium"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_size_time_small"
                tools:text="09:30" />


        </LinearLayout>

        <!-- Verbesserter Content-Bereich -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/card_padding"
            android:layout_gravity="center_vertical">

            <!-- Optimierter Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/card_inner_spacing">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="@dimen/text_size_subject"
                    android:lineHeight="28sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    tools:text="Mathematik" />

                <!-- Verbesserter Dauer-Indikator -->
                <TextView
                    android:id="@+id/tv_duration_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/duration_indicator_background_modern"
                    android:paddingHorizontal="@dimen/duration_badge_padding_horizontal"
                    android:paddingVertical="@dimen/duration_badge_padding_vertical"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="@color/badge_text_light"
                    android:fontFamily="@font/inter_semibold"
                    android:textSize="@dimen/text_size_badge"
                    android:visibility="gone"
                    android:maxLines="1"
                    android:elevation="1dp"
                    tools:text="2 std."
                    tools:visibility="visible" />

                <!-- Modernisiertes Status-Icon -->
                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_check_circle_24"
                    android:contentDescription="Status"
                    app:tint="@color/substitution_event_text"
                    tools:src="@drawable/ic_check_circle_24" />

            </LinearLayout>

            <!-- Optimierte Detail-Informationen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/card_inner_spacing">

                <!-- Lehrer-Information -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/card_inner_spacing">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_person_24"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Lehrer"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="@dimen/text_size_details"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Herr MÃ¼ller" />

                </LinearLayout>

                <!-- Moderne Raum-Information -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_background_secondary_modern"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:elevation="1dp">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@drawable/ic_location_on_24"
                        app:tint="?attr/colorOnSecondaryContainer"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tv_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:fontFamily="@font/inter_semibold"
                        android:textSize="@dimen/text_size_secondary"
                        android:maxLines="1"
                        tools:text="201" />

                </LinearLayout>

            </LinearLayout>

            <!-- Moderne Gruppen-Information -->
            <TextView
                android:id="@+id/tv_group_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group_badge_background_modern"
                android:elevation="1dp"
                android:fontFamily="@font/inter_semibold"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/group_badge_padding_horizontal"
                android:paddingVertical="@dimen/group_badge_padding_vertical"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@color/group_a_text"
                android:textSize="@dimen/text_size_badge"
                android:visibility="gone"
                tools:text="Gruppe A"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>