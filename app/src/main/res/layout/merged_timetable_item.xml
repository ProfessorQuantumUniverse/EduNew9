<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <!-- Periode-Indikator (linker Rand für Mehrfachstunden) -->
        <View
            android:id="@+id/view_period_indicator"
            android:layout_width="@dimen/period_indicator_width"
            android:layout_height="match_parent"
            android:background="@color/double_period_color"
            android:visibility="gone" />

        <!-- Zeit-Bereich (links) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rounded_left_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="@dimen/card_padding"
            android:minWidth="80dp">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_time_large"
                android:maxLines="1"
                tools:text="08:00" />

            <View
                android:layout_width="24dp"
                android:layout_height="1dp"
                android:background="?attr/colorOnPrimary"
                android:alpha="0.7"
                android:layout_marginVertical="4dp" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_size_time_small"
                android:alpha="0.9"
                android:maxLines="1"
                tools:text="09:30" />

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="10sp"
                android:alpha="0.8"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                tools:text="1-2. Std" />

        </LinearLayout>

        <!-- Inhalt-Bereich (rechts) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/card_padding">

            <!-- Header mit Fach und Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/tv_subject"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_subject"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.1"
                    tools:text="Mathematik" />

                <!-- Dauer-Indikator für Mehrfachstunden -->
                <TextView
                    android:id="@+id/tv_duration_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/duration_indicator_background"
                    android:paddingHorizontal="@dimen/duration_badge_padding_horizontal"
                    android:paddingVertical="@dimen/duration_badge_padding_vertical"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:textColor="?attr/colorOnPrimary"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:visibility="gone"
                    android:maxLines="1"
                    tools:text="Doppelstunde"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_status"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_check_circle_24"
                    android:contentDescription="Status"
                    app:tint="?attr/colorPrimary"
                    tools:src="@drawable/ic_check_circle_24" />

            </LinearLayout>

            <!-- Lehrer und Raum Informationen -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_person_24"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Lehrer"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="@dimen/text_size_details"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Herr Müller" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_location_on_24"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="Raum"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tv_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="@dimen/text_size_details"
                        android:maxLines="1"
                        tools:text="A101" />

                </LinearLayout>

            </LinearLayout>

            <!-- Gruppen-Information -->
            <TextView
                android:id="@+id/tv_group_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/group_badge_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorOnPrimary"
                android:textStyle="bold"
                android:textSize="11sp"
                android:visibility="gone"
                android:maxLines="1"
                tools:text="Gruppe A"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
